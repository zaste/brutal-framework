{
  "name": "@brutal/performance-tools",
  "version": "1.0.0",
  "description": "Performance measurement and regression detection tools for BRUTAL V5",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "node test-integration.js",
    "build": "tsc",
    "clean": "rm -rf dist coverage",
    "validate": "npm run test && npm run test:integration"
  },
  "exports": {
    "./benchmark": "./benchmark-suite.js",
    "./regression": "./regression-detector.js",
    "./bundle": "./bundle-tracker.js",
    "./memory": "./memory-leak-detector.js"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "zlib": "^1.0.5"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [".ts"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "*.ts",
      "!*.test.ts",
      "!test-*.ts"
    ]
  }
}