{
  "name": "brutal-framework-workspace",
  "version": "1.0.0",
  "description": "BRUTAL Framework V3 - 15x faster than React",
  "type": "module",
  "scripts": {
    "test": "cd brutal-test && npm test",
    "test:quick": "cd brutal-test && npm run test:quick",
    "test:visual": "cd brutal-test && npm run test:visual",
    "test:complete": "cd brutal-test && npm run test:complete",
    "test:interactive": "cd brutal-test && npm run test:interactive",
    "brutal-test": "node brutal-test/cli.js",
    "build": "cd framework-v3 && npm run build",
    "dev": "cd framework-v3 && npm run dev",
    "foundation:validate": "cd brutal-v6 && node foundation/validate.js",
    "foundation:fix": "cd brutal-v6 && node foundation/validate.js --fix",
    "foundation:monitor": "cd brutal-v6 && node foundation/enforce/monitor.js",
    "v6:dev": "node brutal-v6/server.js"
  },
  "workspaces": [
    "framework-v3",
    "brutal-test"
  ],
  "devDependencies": {
    "playwright": "^1.40.0",
    "puppeteer": "^21.0.0",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "brutal",
    "framework",
    "performance",
    "zero-dependencies"
  ],
  "author": "BRUTAL Team",
  "license": "MIT"
}
