{
  "name": "@brutal/migration-tools",
  "version": "1.0.0",
  "description": "Breaking change analysis and migration tools for BRUTAL V5",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "clean": "rm -rf dist coverage",
    "analyze": "node dist/analyze-cli.js",
    "migrate": "node dist/migrate-cli.js"
  },
  "exports": {
    "./analyzer": "./breaking-change-analyzer.js",
    "./generator": "./migration-generator.js",
    "./tracker": "./api-surface-tracker.js",
    "./impact": "./cross-package-analyzer.js"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0"
  },
  "dependencies": {
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [".ts"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "*.ts",
      "!*.test.ts",
      "!*-cli.ts"
    ]
  }
}