#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# 1. Validate structure
echo "ğŸ“¦ Validating package structure..."
npm run validate:structure || {
  echo "âŒ Package structure validation failed!"
  echo "Run 'npm run validate:structure' to see details"
  exit 1
}

# 2. Check dependencies
echo "ğŸ”— Checking dependencies..."
npm run check:dependencies || {
  echo "âŒ Dependency validation failed!"
  echo "Run 'npm run check:dependencies' to see details"
  exit 1
}

# 3. Lint staged files
echo "ğŸ¨ Linting staged files..."
npx lint-staged || {
  echo "âŒ Linting failed!"
  exit 1
}

# 4. Run tests for changed packages
echo "ğŸ§ª Running tests..."
npm run test:changed || {
  echo "âŒ Tests failed!"
  exit 1
}

echo "âœ… All pre-commit checks passed!"