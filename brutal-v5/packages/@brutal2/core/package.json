{
  "name": "@brutal2/core",
  "version": "0.0.0",
  "description": "BRUTAL2 Core - Composition utilities and component factory",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "size": "size-limit",
    "clean": "rm -rf dist node_modules"
  },
  "keywords": [
    "brutal",
    "composition",
    "components",
    "zero-dependency"
  ],
  "author": "BRUTAL Team",
  "license": "MIT",
  "devDependencies": {
    "@brutal/tools": "workspace:*",
    "@size-limit/preset-small-lib": "^11.0.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "size-limit": "^11.0.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "2 KB"
    }
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}