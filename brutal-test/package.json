{
  "name": "@brutal/test-system",
  "version": "1.0.0",
  "description": "BRUTAL Test System - Detects ALL failures with zero mercy",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "node cli.js",
    "test:quick": "node cli.js --mode=quick",
    "test:visual": "node cli.js --mode=visual",
    "test:complete": "node cli.js --mode=complete",
    "test:interactive": "node cli.js --mode=interactive --no-headless",
    "test:continuous": "node cli.js --mode=continuous",
    "dashboard": "node cli.js --dashboard"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "playwright": "^1.40.0",
    "puppeteer": "^21.0.0",
    "ws": "^8.18.3"
  },
  "keywords": [
    "testing",
    "brutal",
    "framework",
    "visual-regression",
    "performance",
    "browser-automation"
  ],
  "author": "BRUTAL Team",
  "license": "MIT"
}
