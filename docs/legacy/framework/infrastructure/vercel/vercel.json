{
  "version": 2,
  "name": "native-web-components-framework",
  "builds": [
    {
      "src": "packages/core/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "packages/extensions/*/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "documentation/**",
      "use": "@vercel/static"
    }
  ],
  "functions": {
    "packages/api/**/*.js": {
      "runtime": "nodejs20.x",
      "regions": ["iad1", "sfo1"],
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/docs/(.*)",
      "destination": "/documentation/$1"
    },
    {
      "source": "/cdn/(.*)",
      "destination": "/dist/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/dist/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, stale-while-revalidate=604800"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, OPTIONS"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://native-web-components.dev"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/framework",
      "destination": "/docs/getting-started",
      "permanent": false
    },
    {
      "source": "/performance",
      "destination": "/docs/performance",
      "permanent": false
    }
  ],
  "regions": ["iad1", "sfo1"],
  "env": {
    "NODE_ENV": "production",
    "FRAMEWORK_VERSION": "1.0.0-alpha.1",
    "PERFORMANCE_TARGET": "50",
    "ENABLE_ANALYTICS": "true"
  },
  "crons": [
    {
      "path": "/api/health-check",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/performance-report",
      "schedule": "0 0 * * *"
    }
  ]
}